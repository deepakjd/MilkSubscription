<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comorinland.deepak.milksubscription">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CustomerApp.PasswordLost"></activity>
        <activity
            android:name=".CustomerApp.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomerApp.MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".CustomerApp.CustomerLogin"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.comorinland.deepak.milksubscription.CustomerApp.CustomerLogin" />
        </activity>
        <activity android:name=".CustomerApp.CustomerLogin" />
    </application>

</manifest>